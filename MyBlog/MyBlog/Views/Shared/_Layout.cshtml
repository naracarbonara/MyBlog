

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var homeActive = ViewBag.Title == "Home" ? "active" : "";
    var aboutIsActive = ViewBag.Title == "About Us" ? "active" : "";
    var contactIsActive = ViewBag.Title == "Contact Us" ? "active" : "";
    var createIsActive = ViewBag.Title == "Create" ? "active" : "";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script&family=Sacramento&family=Tangerine:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <h1 style="text-align:center;font-family: 'Tangerine', cursive;">Yoga Blog <img src="https://img.icons8.com/cotton/64/000000/lotus--v1.png" style="width:40px;height:40px;margin-bottom:20px;" /></h1>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
         <div class="collapse navbar-collapse" id="navbarSupportedContent">
             <ul class="navbar-nav mr-auto">

                 <li class="nav-item @homeActive">
                     <a class="nav-link" asp-controller="Post" asp-action="Overview">Home</a>
                 </li>
                 <li class="nav-item @aboutIsActive">
                     <a class="nav-link" asp-controller="Info" asp-action="AboutUs">About Us</a>
                 </li>
                 <li class="nav-item @contactIsActive">
                     <a class="nav-link" asp-controller="Info" asp-action="ContactUs">Contact Us</a>
                 </li>
                 <li class="nav-item @contactIsActive">
                     <a class="nav-link" asp-controller="Post" asp-action="Create">Create</a>
                 </li>
                 <li class="nav-item dropdown">
                     <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                         Dropdown
                     </a>
                     <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                         <a class="dropdown-item" href="#">Action</a>
                         <a class="dropdown-item" href="#">Another action</a>
                         <div class="dropdown-divider"></div>
                         <a class="dropdown-item" href="#">Something else here</a>
                     </div>
                 </li>

             </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
    <div class="container" style="margin-top:40px;">

        @RenderBody()
    </div>
</body>
</html>
